# AI Employee Configuration
# Copy this to .env and fill in your values
# NEVER commit .env to version control

# Vault path (absolute path to your Obsidian vault)
VAULT_PATH=D:/hackathon-0-PersonalAI-Employee/AI_Employee_Vault

# Drop folder path (where you drop files for the AI to process)
DROP_FOLDER_PATH=D:/hackathon-0-PersonalAI-Employee/AI_Employee_Vault/Drop_Folder

# Watcher settings
CHECK_INTERVAL=10
DRY_RUN=true

# Gmail API credentials
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_TOKEN_PATH=./credentials/gmail_token.json
GMAIL_CREDENTIALS_PATH=./credentials/gmail_credentials.json

# LinkedIn automation
LINKEDIN_SESSION_PATH=./credentials/linkedin_session
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Scheduling intervals (seconds)
SCHEDULE_GMAIL_INTERVAL=120
SCHEDULE_LINKEDIN_INTERVAL=900
SCHEDULE_DASHBOARD_INTERVAL=600
